{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "target": "ESNEXT",
    "module": "commonjs",
    "removeComments": true,
    "esModuleInterop": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "declaration": false,
    "baseUrl": "./",
    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}
